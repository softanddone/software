@layer scrollbar {
  @property --hue {
    initial-value: 0;
    syntax: '<number>';
    inherits: false;
  }

  @property --chroma {
    initial-value: 0;
    syntax: '<number>';
    inherits: true;
  }

  [data-sync-scrollbar='true'] {
    scrollbar-color: oklch(var(--lightness) var(--chroma) var(--hue)) #0000;
  }

  @supports (animation-timeline: scroll()) and (animation-range: 0% 100%) {
    [data-sync-scrollbar='true'][data-animate='true'] {
      timeline-scope: --list;
      scrollbar-color: oklch(var(--lightness) var(--chroma, 0) var(--hue)) #0000;
      animation-name: change, chroma-on, chroma-off;
      animation-fill-mode: both;
      animation-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
      animation-range: entry 50% exit 50%, entry 40% entry 50%, exit 30% exit 40%;
      animation-timeline: --list;
    }

    [data-sync-scrollbar='true'][data-animate='true'] ul {
      view-timeline: --list;
    }
  }

  @keyframes change {
    to {
      --hue: var(--end);
    }
  }

  @keyframes chroma-on {
    to {
      --chroma: 0.3;
    }
  }

  @keyframes chroma-off {
    to {
      --chroma: 0;
    }
  }
}

@layer effect {
  :root {
    --start: 0;
    --end: 360;
    --lightness: 65%;
    --base-chroma: 0.3;
  }

  [data-theme='dark'] {
    --lightness: 75%;
  }

  [data-theme='light'] {
    --lightness: 65%;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --lightness: 75%;
    }
  }

  ul {
    --step: calc((var(--end) - var(--start)) / (var(--count) - 1));
  }

  li:not(:last-of-type) {
    color: oklch(var(--lightness) var(--base-chroma) calc(var(--start) + (var(--step) * var(--i))));
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  @supports (animation-timeline: scroll()) and (animation-range: 0% 100%) {
    [data-animate='true'] li {
      opacity: 0.2;
      transform: translateY(20px) scale(0.95);
      animation-name: brighten, elastic-entrance;
      animation-fill-mode: both;
      animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1), cubic-bezier(0.25, 0.46, 0.45, 0.94);
      animation-range: cover calc(50% - 1lh) calc(50% + 1lh);
      animation-timeline: view();
      animation-duration: 0.8s, 1.2s;
    }

    [data-animate='true'] li:first-of-type {
      --start-opacity: 1;
      transform: none;
    }

    [data-animate='true'] li:last-of-type {
      --brightness: 1;
      --end-opacity: 1;
    }

    @keyframes brighten {
      0% {
        opacity: var(--start-opacity, 0.2);
        filter: brightness(1) blur(2px);
        transform: translateY(30px) scale(0.9);
      }
      30% {
        opacity: 0.6;
        filter: brightness(1.1) blur(1px);
        transform: translateY(10px) scale(0.98);
      }
      50% {
        opacity: 1;
        filter: brightness(var(--brightness, 1.3)) blur(0px);
        transform: translateY(-5px) scale(1.05);
      }
      70% {
        opacity: 1;
        filter: brightness(var(--brightness, 1.2)) blur(0px);
        transform: translateY(2px) scale(1.02);
      }
      100% {
        opacity: var(--end-opacity, 0.2);
        filter: brightness(1) blur(1px);
        transform: translateY(20px) scale(0.95);
      }
    }

    @keyframes elastic-entrance {
      0% {
        transform: translateX(-50px) rotate(-2deg) scale(0.8);
        opacity: 0;
      }
      40% {
        transform: translateX(10px) rotate(1deg) scale(1.1);
        opacity: 0.8;
      }
      60% {
        transform: translateX(-5px) rotate(-0.5deg) scale(1.05);
        opacity: 1;
      }
      80% {
        transform: translateX(2px) rotate(0.2deg) scale(0.98);
        opacity: 1;
      }
      100% {
        transform: translateX(0) rotate(0deg) scale(1);
        opacity: 1;
      }
    }
  }
}

